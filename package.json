{
  "name": "space-invaders",
  "version": "1.0.0",
  "description": "A small browser-based Space Invaders game.",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack serve --mode development --open",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "test": "jest"
  },
  "devDependencies": {
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.0.0",
    "babel-loader": "^8.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.0.0",
    "prettier": "^2.0.0",
    "eslint-config-prettier": "^8.0.0",
    "css-loader": "^5.0.0",
    "style-loader": "^2.0.0",
    "jest": "^26.0.0",
    "babel-jest": "^26.0.0",
    "eslint-plugin-jest": "^24.0.0"
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "import/no-unresolved": "error",
      "import/named": "error",
      "import/default": "error",
      "import/namespace": "error"
    },
    "plugins": [
      "import",
      "jest"
    ]
  }
}
